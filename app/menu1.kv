<Item>

    #on_release:app.spr(app.nume, self.text)
    on_release:app.comentariu_dialog(app.nume, self.text)
    ImageLeftWidget:
        source: root.source

<Item1>
    observatie:observatie
    MDTextFieldRect:
        id:observatie
        size_hint :.8, .3

<Poplogin>
    size_hint:.5,.5
    user:user
    password:password

    MDCard:
        padding:25
        spacing:25
        orientation:'vertical'
        MDLabel:
            text:"Login"
            pos_hint:{"center_x": 0.5}
            font_size:40
            hallign:'center'


        MDTextFieldRound:
            id:user
            hint_text: "email"
            icon_right: "account"
            size_hint : .9 ,.2
            pos_hint:{"center_x": 0.5}
        MDTextFieldRound:
            id:password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint : .9 ,.2
            password: True
            pos_hint:{"center_x": 0.5}
        MDRoundFlatButton:
            text:"Log in"
            font_size:12
            pos_hint:{"center_x": 0.5}
            on_press:app.functieverificarelogin()

<Popstare>
    MDCard:
        padding:25
        spacing:25
        orientation:'vertical'
        MDLabel:
            text:"Eroare"
            pos_hint:{"center_x": 0.5}
            font_size:40
            hallign:'center'
                #font_size:17
            normal_color: app.theme_cls.accent_color

<Popregister>
    nume:nume
    prenume:prenume
    parola:parola
    email:email
    size_hint:.6,.6


    MDCard:
        padding:25
        spacing:25
        orientation:'vertical'
        MDLabel:
            text:"Register"
            pos_hint:{"center_x": 0.5}
            font_size:40
            hallign:'center'
            font_size:17
            normal_color: app.theme_cls.accent_color

        MDTextFieldRound:
            id:nume
            hint_text: "nume"
            font_size:17
            size_hint : .8 ,.6
            pos_hint:{"center_x": 0.5}
        MDTextFieldRound:
            id:prenume
            hint_text: "prenume"
            font_size:17
            size_hint : .8 ,.6
            pos_hint:{"center_x": 0.5}
        MDTextFieldRound:
            id:parola
            hint_text: "parola"
            size_hint : .8 ,.6
            font_size:17
            password:True
            pos_hint:{"center_x": 0.5}
        MDTextFieldRound:
            id:email
            hint_text: "email"
            font_size:17
            size_hint : .8 ,.6
            pos_hint:{"center_x": 0.5}
        MDRoundFlatButton:
            text:"Register"
            font_size:15
            pos_hint:{"center_x": 0.5}
            on_press:app.functieinregistrare()



